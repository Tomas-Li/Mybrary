<form action="/user/edit/<%= user._id %>?_method=PUT" method="POST">
    <%- include('_forms_fields') %>
    <div class="form-row">
        <div class="form-item">
            <label>Bio</label>
            <textarea name="bio"><%= user.bio %></textarea>
        </div>
    </div>
    <!--Confirmacion de Password actual para aceptar cualquier cambio!-->
    <br> <br>
    <div class="form-row">
        <div class="form-item">
            <label>Input your actual Password to validate any changes</label>
            <input required type="password" name="actualPassword" value="" placeholder="Actual Password">
        </div>
    </div>
    <div class="form-row form-row-end btn-row">
        <a class="btn btn-danger" href="/">Cancel</a>
        <button class="btn btn-primary" type="submit">Update</button>
    </div>
</form>